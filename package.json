{
  "name": "billiard-management-server",
  "version": "1.0.0",
  "description": "Backend API for Billiard Management System built with Bun, ElysiaJS, and PostgreSQL",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "db:init": "psql -U postgres -d billiard -f src/schema.sql"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "dotenv": "^17.2.3",
    "elysia": "^1.4.19",
    "postgres": "^3.4.7"
  }
}